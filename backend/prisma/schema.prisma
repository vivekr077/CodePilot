generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Language {
  javascript
  python
  cpp
  java
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String
  password    String
  generations Generation[]
  createdAt   DateTime      @default(now())
}

model Generation {
  id         Int      @id @default(autoincrement())
  prompt     String
  language   Language  // "javascript", "python", "cpp", "java"
  code       String    @db.LongText
  timestamp  DateTime @default(now())

  // Foreign key â†’ relates to Users table
  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  // Useful for pagination and filtering
  @@index([timestamp])
  @@index([userId])
}
